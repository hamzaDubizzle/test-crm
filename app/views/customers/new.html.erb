<h1>New Customer</h1>

<!-- Bad practice: no proper form styling or validation display -->
<%= form_with(model: @customer, local: true) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :phone %>
    <%= form.telephone_field :phone %>
  </div>

  <div>
    <%= form.label :company %>
    <%= form.text_field :company %>
  </div>

  <div>
    <%= form.label :status %>
    <%= form.select :status, Customer::STATUS_OPTIONS %>
  </div>

  <div>
    <%= form.label :notes %>
    <%= form.text_area :notes %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', customers_path %>
